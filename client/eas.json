{
    "cli": {
        "version": ">= 0.40.0"
    },
    "build": {
        "common": {
            "android": {
                "autoIncrement": true
            }
        },
        "production": {
            "extends": "common",
            "releaseChannel": "production",
            "env": {
                "APP_ENV": "production"
            }
        },
        "preview": {
            "extends": "common",
            "releaseChannel": "preview",
            "distribution": "internal",
            "env": {
                "APP_ENV": "preview"
            }
        },
        "development": {
            "extends": "common",
            "developmentClient": true,
            "distribution": "internal",
            "env": {
                "APP_ENV": "development"
            }
        }
    },
    "submit": {
        "production": {
            "android": {
                "serviceAccountKeyPath": "playstore-service-account.json",
                "track": "internal"
            }
        }
    }
}
