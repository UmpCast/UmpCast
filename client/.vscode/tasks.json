            "presentation": {
                "group": "watch"
            }
        },
        {
            "label": "Jest",
            "type": "shell",
            "command": "cd client && yarn test",
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "group": "watch"
            }
        },
        {
            "label": "GraphQL",
            "type": "shell",
            "command": "docker compose up --build",
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "group": "watch"
            }
        }
    ]
}
